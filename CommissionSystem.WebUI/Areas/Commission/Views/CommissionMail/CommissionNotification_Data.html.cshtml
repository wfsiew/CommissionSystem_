@foreach (AgentView a in Model.AgentViewList)
{
    <table>
        <tbody>
            <tr>
                <td>
                    <span class="bold">Commission Period :</span>
                </td>
                <td>
                    <span class="bold">@ViewData["DateFrom"].ToString() - @ViewData["DateTo"].ToString()</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span class="bold">Agent :</span>
                </td>
                <td>
                    <span class="bold">@a.AgentID: @a.AgentName</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span class="bold">Total Commission Payable :</span>
                </td>
                <td>
                    <span class="bold">@Utils.FormatCurrency(a.TotalCommission)</span>
                </td>
            </tr>
        </tbody>
    </table>
    if (Model.CommissionViewDic[a.AgentID.ToString()].Count < 1)
    {
        <div>
            No customers found.
        </div>
    }

    else
    {
        StringBuilder sbamt = new StringBuilder();
        StringBuilder sbbr = new StringBuilder();
        <br />
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th class="tdRight">No.</th>
                    <th>CustID</th>
                    <th>Name</th>
                    <th>Desc</th>
                    <th class="nowrap">Settlement Date</th>
                    <th class="tdRight">Settlement Amount</th>
                    <th>Comm Rate</th>
                    <th class="tdRight">Comm Amount</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CommissionViewDic[a.AgentID.ToString()].Count; i++)
                {
                    CommissionView k = Model.CommissionViewDic[a.AgentID.ToString()][i];
                    <tr>
                        <td class="tdRight">@(i + 1).</td>
                        <td>@k.Customer.CustID</td>
                        <td>@k.Customer.Name</td>
                        <td>
                            @foreach (CustomerBillingInfo bi in k.Customer.BillingInfoList)
                            {
                                <div>
                                    @bi.ProductType.Description
                                </div>
                            }
                        </td>
                        <td class="nowrap">
                            @{
                                sbamt.Clear();
                                sbbr.Clear();
                            }
                            @foreach (CustomerSettlement se in k.Customer.SettlementList)
                            {
                                <div>@Utils.FormatDateTime(se.RealDate)</div>
                                sbamt.AppendFormat("<div>{0}</div>", Utils.FormatCurrency(se.Amount));
                                sbbr.Append("<br />");
                            }
                        </td>
                        <td class="tdRight nowrap">
                            @Html.Raw(sbamt.ToString())
                            <div class="bold total">
                                @Utils.FormatCurrency(k.SettlementAmount)
                            </div>
                        </td>
                        <td class="nowrap">
                            @Html.Raw(sbbr.ToString())
                            (T x @k.CommissionRate)
                        </td>
                        <td class="tdRight nowrap">
                           @Html.Raw(sbbr.ToString())
                            @Utils.FormatCurrency(k.Commission)
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4"></td>
                    <td class="tdRight">Grand Total</td>
                    <td class="tdRight nowrap">@Utils.FormatCurrency(a.TotalSettlement)</td>
                    <td></td>
                    <td class="tdRight nowrap">@Utils.FormatCurrency(a.TotalCommission)</td>
                </tr>
            </tfoot>
        </table>
    }
}
