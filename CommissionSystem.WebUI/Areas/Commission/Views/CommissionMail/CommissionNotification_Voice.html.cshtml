@foreach (AgentView a in Model.AgentViewList)
{
    <table>
        <tbody>
            <tr>
                <td>
                    <span class="bold">Commission Period :</span>
                </td>
                <td>
                    <span class="bold">@ViewData["DateFrom"].ToString() - @ViewData["DateTo"].ToString()</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span class="bold">Agent :</span>
                </td>
                <td>
                    <span class="bold">@a.AgentID: @a.AgentName</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span class="bold">Total Commission Payable :</span>
                </td>
                <td>
                    <span class="bold">@Utils.FormatCurrency(a.TotalCommission)</span>
                </td>
            </tr>
        </tbody>
    </table>
    if (Model.CommissionViewDic[a.AgentID.ToString()].Count < 1)
    {
        <div>
            No customers found.
        </div>
    }

    else
    {
        StringBuilder sbamt = new StringBuilder();
        StringBuilder sbidd = new StringBuilder();
        StringBuilder sbstd = new StringBuilder();
        StringBuilder sbmob = new StringBuilder();
        StringBuilder sbbr = new StringBuilder();
        <br />
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th class="tdRight">No.</th>
                    <th>CustID</th>
                    <th>Name</th>
                    <th>Desc</th>
                    <th class="nowrap">Settlement Date</th>
                    <th class="tdRight">Settlement Amount</th>
                    <th>Comm Rate</th>
                    <th class="tdRight">Comm Amount</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CommissionViewDic[a.AgentID.ToString()].Count; i++)
                {
                    VoiceCommissionView k = Model.CommissionViewDic[a.AgentID.ToString()][i];
                    <tr>
                        <td class="tdRight">@(i + 1).</td>
                        <td>@k.Customer.CustID</td>
                        <td>@k.Customer.Name</td>
                        <td>
                            @foreach (CustomerBillingInfo bi in k.Customer.BillingInfoList)
                            {
                                <div>
                                    @bi.ProductType.Description
                                </div>
                            }
                        </td>
                        <td class="nowrap">
                            @{
                                sbamt.Clear();
                                sbbr.Clear();
                            }
                            @foreach (CustomerSettlement se in k.Customer.SettlementList)
                            {
                                <div>
                                    <div>@Utils.FormatDateTime(se.RealDate)</div>

                                    @{
                                        sbbr.Append("<div>");
                                        sbbr.Append("<br /><br />");
                                        sbbr.Append("<br /><br />");

                                        sbamt.Append("<div>");

                                        sbidd.Clear();
                                        sbstd.Clear();
                                        sbmob.Clear();

                                        sbidd.Append(@"<div class=""pull-left"">");
                                        sbidd.Append(@"<span class=""label label-default"">IDD</span>");
                                        sbidd.Append("</div>");
                                        sbidd.Append("<br />");

                                        sbstd.Append(@"<div class=""pull-left"">");
                                        sbstd.Append(@"<span class=""label label-default"">STD</span>");
                                        sbstd.Append("</div>");
                                        sbstd.Append("<br />");

                                        sbmob.Append(@"<div class=""pull-left"">");
                                        sbmob.Append(@"<span class=""label label-default"">MOB</span>");
                                        sbmob.Append("</div>");
                                        sbmob.Append("<br />");

                                        int n = se.InvoiceList.Count;
                                        for (int j = 0; j < n; j++)
                                        {
                                            <br /><br /><br />
                                            sbbr.Append("<br /><br /><br />");
                                            Invoice inv = se.InvoiceList[j];
                                            sbidd.AppendFormat("<div>{0}</div>", Utils.FormatCurrency(inv.CallChargesIDD));
                                            sbstd.AppendFormat("<div>{0}</div>", Utils.FormatCurrency(inv.CallChargesSTD));
                                            sbmob.AppendFormat("<div>{0}</div>", Utils.FormatCurrency(inv.CallChargesMOB));
                                        }

                                    <br /><br /><br /><br />
                                        sbbr.Append("<br />");

                                        sbamt.Append(sbidd.ToString());
                                        sbamt.Append(sbstd.ToString());
                                        sbamt.Append(sbmob.ToString());

                                        sbamt.Append(@"<div class=""bold total"">");
                                        sbamt.Append(@"<div class=""pull-left"">");
                                        sbamt.Append(@"<span class=""label label-default"">Total</span>");
                                        sbamt.Append("</div>");
                                        sbamt.Append("<br />");
                                        sbamt.AppendFormat("<div>{0}</div>", Utils.FormatCurrency(se.CallCharge));

                                        sbamt.Append("</div>");
                                        sbbr.Append("</div>");
                                    }
                                </div>
                            }
                        </td>
                        <td class="tdRight nowrap">
                            @Html.Raw(sbamt.ToString())
                            <div class="bold total">
                                <div class="pull-left">
                                    <span class="label label-default">Total IDD</span>
                                </div>
                                <br />
                                <div>
                                     @Utils.FormatCurrency(k.CallChargeIDD)
                                </div>
                                <div class="pull-left">
                                    <span class="label label-default">Total STD</span>
                                </div>
                                <br />
                                <div>
                                     @Utils.FormatCurrency(k.CallChargeSTD)
                                </div>
                                <div class="pull-left">
                                    <span class="label label-default">Total MOB</span>
                                </div>
                                <br />
                                <div>
                                     @Utils.FormatCurrency(k.CallChargeMOB)
                                </div>
                                <div class="pull-left">
                                    <span class="label label-default pull-left">Total</span>
                                </div>
                                <br />
                                <div>
                                     @Utils.FormatCurrency(k.CallCharge)
                                </div>
                            </div>
                        </td>
                        <td class="nowrap">
                            @Html.Raw(sbbr.ToString())
                            <div>
                                <br />
                                <div>(T x @k.CommissionRateIDD)</div>
                                <br />
                                <div>(T x @k.CommissionRateSTD)</div>
                                <br />
                                <div>(T x @k.CommissionRateMOB)</div>
                            </div>
                        </td>
                        <td class="tdRight">
                            @Html.Raw(sbbr.ToString())
                            <div>
                                <br />
                                <div>@Utils.FormatCurrency(k.CommissionIDD)</div>
                                <br />
                                <div>@Utils.FormatCurrency(k.CommissionSTD)</div>
                                <br />
                                <div>@Utils.FormatCurrency(k.CommissionMOB)</div>
                                <div class="bold total">@Utils.FormatCurrency(k.Commission)</div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4"></td>
                    <td class="tdRight">Grand Total</td>
                    <td class="tdRight nowrap">@Utils.FormatCurrency(a.TotalSettlement)</td>
                    <td></td>
                    <td class="tdRight nowrap">@Utils.FormatCurrency(a.TotalCommission)</td>
                </tr>
            </tfoot>
        </table>
    }
}
