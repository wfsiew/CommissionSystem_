<div class="alert alert-info" ng-show="settlementlist != null && settlementlist.length > 0">Settlement</div>
<table class="table table-condensed table-hover table-striped" ng-show="settlementlist != null && settlementlist.length > 0">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Comment</th>
            <th class="tdRight">Amount</th>
            <th>Date</th>
            <th>Reference</th>
            <th>ORNo</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="o in settlementlist">
            <td>{{o.CustID}}</td>
            <td>{{o.CustName}}</td>
            <td>{{o.Comment}}</td>
            <td class="tdRight">{{o.Amount | currency:''}}</td>
            <td>{{o.RealDate | datefilter | date:'yyyy-MM-dd'}}</td>
            <td>{{o.Reference}}</td>
            <td>{{o.ORNo}}</td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2"></td>
            <td class="tdRight">Total Amount</td>
            <td class="tdRight">{{result.amount | currency:''}}</td>
            <td colspan="2"></td>
        </tr>
    </tfoot>
</table>
