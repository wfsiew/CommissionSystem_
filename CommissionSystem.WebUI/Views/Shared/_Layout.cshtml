<!DOCTYPE html>

@using CommissionSystem.WebUI.Helpers;

<html ng-app="mvcapp">
<head>
    <!-- Force latest IE rendering engine or ChromeFrame if installed -->
    <!--[if IE]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <![endif]-->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="~/css/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap/css/select2.css" rel="stylesheet" />
    <link href="~/css/lib/toastr.min.css" rel="stylesheet" />
    <link href="~/css/lib/loading-bar.css" rel="stylesheet" />
    <link href="~/css/lib/angular-motion.min.css" rel="stylesheet" />
    <link href="~/css/app.css" rel="stylesheet" />

    <script src="~/js/lib/jquery-1.10.2.min.js"></script>
    <script src="~/js/lib/jquery.blockUI.js"></script>
    <script src="~/js/lib/bootstrap.min.js"></script>
    <script src="~/js/lib/angular.min.js"></script>
    <script src="~/js/lib/angular-route.min.js"></script>
    <script src="~/js/lib/angular-animate.min.js"></script>
    <script src="~/js/lib/angular-sanitize.min.js"></script>
    <script src="~/js/lib/angular-strap.min.js"></script>
    <script src="~/js/lib/angular-strap.tpl.min.js"></script>
    <script src="~/js/lib/ui-bootstrap-tpls-0.11.0.min.js"></script>
    <script src="~/js/lib/ui-utils.min.js"></script>
    <script src="~/js/lib/select2.min.js"></script>
    <script src="~/js/lib/select2.js"></script>
    <script src="~/js/lib/toastr.min.js"></script>
    <script src="~/js/lib/loading-bar.js"></script>
    <script src="~/js/lib/underscore-min.js"></script>
    <script src="~/js/lib/bootbox.min.js"></script>
    <script src="~/js/utils.js"></script>
    <script src="~/js/route.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/filters.js"></script>
    <script src="~/js/services.js"></script>
    <script src="~/js/directives.js"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Commission System</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Profile</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-stacked nav-sidebar">
                    <li><a href="">Commission</a></li>
                    <li class="@(ViewBag.Menu == Constants.CORPORATE_DATA ? "active" : "")"><a href="@Url.Action("Index", "Data", new { area = "Commission" })">Corporate Data</a></li>
                    <li class="@(ViewBag.Menu == Constants.FIBREPLUS)"><a href="@Url.Action("Index", "FibrePlus", new { area = "Commission" })">Fibre+</a></li>
                    <li><a href="">Another nav item</a></li>
                    <li><a href="">More navigation</a></li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <h2 class="page-header">@ViewBag.Title</h2>
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
