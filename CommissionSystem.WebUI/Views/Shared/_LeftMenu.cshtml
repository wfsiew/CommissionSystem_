@using CommissionSystem.WebUI.Helpers;

<!-- Left side column. contains the logo and sidebar -->
<aside class="left-side sidebar-offcanvas">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <ul class="sidebar-menu">
            <li class="treeview active">
                <a href="#">
                    <i class="fa fa-th"></i>
                    <span>Products</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li class="treeview @UIHelper.GetCorporateVoiceMenuCss(ViewBag.Menu)">
                        <a href="#">
                            <i class="fa fa-th"></i>
                            <span>Corporate Voice</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@(ViewBag.Menu == Constants.DISCOUNTED_CALL_SERVICE ? "active" : null)"><a href="@Url.Action("Index", "DiscountedCallService", new { area = "Commission" })"><i class="fa fa-angle-double-right"></i> Discounted Call Service</a></li>
                            <li class="@(ViewBag.Menu == Constants.SIP ? "active" : null)"><a href="@Url.Action("Index", "SIP", new { area = "Commission" })"><i class="fa fa-angle-double-right"></i> SIP</a></li>
                            <li class="@(ViewBag.Menu == Constants.E1 ? "active" : null)"><a href="@Url.Action("Index", "E1", new { area = "Commission" })"><i class="fa fa-angle-double-right"></i> E1</a></li>
                        </ul>
                    </li>
                    <li class="@UIHelper.GetCorporateMenuCss(ViewBag.Menu)">
                        <a href="@Url.Action("Index", "Data", new { area = "Commission" })">
                            <i class="fa fa-th"></i>
                            <span>Corporate Data</span>
                        </a>
                    </li>
                    <li class="@(ViewBag.Menu == Constants.FIBREPLUS ? "active" : null)">
                        <a href="@Url.Action("Index", "FibrePlus", new { area = "Commission" })">
                            <i class="fa fa-th"></i>
                            <span>Fibre+</span>
                        </a>
                    </li>
                    <li class="@(ViewBag.Menu == Constants.SPEEDPLUS ? "active" : null)">
                        <a href="@Url.Action("Index", "SpeedPlus", new { area = "Commission" })">
                            <i class="fa fa-th"></i>
                            <span>Speed+</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="treeview @UIHelper.GetAgentMenuCss(ViewBag.Menu)">
                <a href="#">
                    <i class="fa fa-th"></i>
                    <span>Agent Management</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li class="treeview @UIHelper.GetAgentCorporateVoiceMenuCss(ViewBag.Menu)">
                        <a href="#">
                            <i class="fa fa-th"></i>
                            <span>Corporate Voice</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@(ViewBag.Menu == Constants.AGENT_STRUCTURE_VOICE ? "active" : null)"><a href="@Url.Action("AgentSummary", "DiscountedCallService", new { area = "Commission" })"><i class="fa fa-angle-double-right"></i> Agent Structure</a></li>
                        </ul>
                    </li>
                    <li class="treeview @UIHelper.GetAgentCorporateDataMenuCss(ViewBag.Menu)">
                        <a href="#">
                            <i class="fa fa-th"></i>
                            <span>Corporate Data</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@(ViewBag.Menu == Constants.AGENT_STRUCTURE_DATA ? "active" : null)"><a href="@Url.Action("AgentSummary", "Data", new { area = "Commission" })"><i class="fa fa-angle-double-right"></i> Agent Structure</a></li>
                        </ul>
                    </li>
                    <li class="treeview @UIHelper.GetAgentFibrePlusMenuCss(ViewBag.Menu)">
                        <a href="#">
                            <i class="fa fa-th"></i>
                            <span>Fibre+</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@(ViewBag.Menu == Constants.AGENT_STRUCTURE_FIBREPLUS ? "active" : null)"><a href="@Url.Action("AgentSummary", "FibrePlus", new { area = "Commission" })"><i class="fa fa-angle-double-right"></i> Agent Structure</a></li>
                        </ul>
                    </li>
                    <li class="treeview @UIHelper.GetAgentSpeedPlusMenuCss(ViewBag.Menu)">
                        <a href="#">
                            <i class="fa fa-th"></i>
                            <span>Speed+</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@(ViewBag.Menu == Constants.AGENT_STRUCTURE_SPEEDPLUS ? "active" : null)"><a href="@Url.Action("AgentSummary", "SpeedPlus", new { area = "Commission" })"><i class="fa fa-angle-double-right"></i> Agent Structure</a></li>
                        </ul>
                    </li>
                </ul>
            </li>
        </ul>
    </section>
</aside>
